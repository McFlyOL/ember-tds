<div class="ui container">
  <div class="ui icon message">
    <i class="open folder icon"></i>
    <div class="content">
      <div class="header">
        {{model.project.name}}
      </div>
      <p>{{model.project.descriptif}}</p>
    </div>    
  </div>  
  <h3>Stories</h3>
  <LinkTo class="ui button"  @route="story.new" @model={{model.project.id}}>
    <i class="plus icon"></i> Add a Story in project
  </LinkTo>

  {{#each model.story as |story|}}
  <div class="ui icon message">
    <i class="file icon"></i>
    <div class="content">
      <div class="header">
        {{story.code}}
      </div>
      <p>{{story.descriptif}}</p>
      {{#each story.tags as |tag|}}
      <a class="item">
        <div class="ui {{tag.color}} horizontal label">{{tag.title}}</div>
      </a>
      {{/each}}
      <div class="right aligned">
        <div class="ui right labeled button" tabindex="0">
          <a class="ui basic right pointing label">
            {{story.developer.identity}}
          </a>
        </div>
      </div>
    </div>
  </div>
    {{/each}}
</div>
{{outlet}}