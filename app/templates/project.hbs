<div class="ui container">
  <div class="ui icon message">
    <i class="open folder icon"></i>
    <div class="content">
      <div class="header">
        {{model.project.name}}
      </div>
      <p>{{model.project.descriptif}}</p>
    </div>    
  </div>  
  <h3>Stories</h3>
  <LinkTo class="ui button"  @route="story.new" @model={{model.project.id}}>
    <i class="plus icon"></i> Add a Story in project...
  </LinkTo>
  <LinkTo class="ui button teal" @route="project.board" @model={{model.project.id}}>
    <i class="icon calendar alternate"></i>
      Dashboard
  </LinkTo>
    <LinkTo class="ui button" @route="projects">
    <i class="icon arrow circle left"></i>
      Back to projects
  </LinkTo>
  <table class="ui selectable single line table">
    <thead>
      <th><i class="icon step forward"></i>Product Backlog</th>
      <th></th>
    </thead>
    <tbody>
      {{#each model.story as |story|}}
        <tr>
          <td>
            <h4 class="ui header">
              <i class="file icon"></i>
              <div class="content">
                {{story.code}}
                <div class="sub header">
                  {{story.descriptif}}
                  {{#each story.tags as |tag|}}
                    <div class="ui {{tag.color}} label">{{tag.title}}</div>
                  {{/each}}
                </div>
              </div>
            </h4>
          </td>
          <td class="right aligned">
            <div class="ui left labeled button" tabindex="0">
              <a class="ui basic right pointing label">
                {{story.developer.identity}}
              </a>
              <LinkTo class="ui button" @route="story.edit" @model={{story.id}}>
                <i class="folder open icon"></i>
                Open...
              </LinkTo>
            </div>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="2" class="center aligned">Aucune story pour ce projet</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{outlet}}